{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",  
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@brainstorm": ["../dist/index.d.ts"]
    },
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ],
}